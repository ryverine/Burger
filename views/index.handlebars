
<div class="container">

    <div id="header">
      <img src="./assets/img/burgie.png"><br>
      <img src="./assets/img/title.png">
    </div>

    <div class="row">
        <div class="col-4">
            <h2>Burgers</h2>
            {{#each burgers}}
            <div class="burgerData" id="div-burger-{{id}}" data-devoured="{{devoured}}">
                <!-- <p>ID: {{id}}</p> -->
                <p class="burgerName">{{burger_name}}</p>
                <!-- <p>Devoured: {{devoured}}</p> -->
            </div>
            {{/each}}
        </div>
        <div class="col-3">
          <forms>		
            <h2>Name a Burger</h2>
            <div><input type="text" id="newBurger"></div>
            <div>
                <input type="submit" id="btn-submit" class="btn" value="Add Burger">
            </div>
          </form>
        </div>
        <div class="col-3">
          <h2>Burgers Eaten</h2>
            {{#each devoured}}
              <div class="devouredData" id="div-devoured-{{id}}" data-devoured="{{devoured}}">
                  <!-- <p>ID: {{id}}</p> -->
                  <p class="devouredName">{{burger_name}}</p>
                  <!-- <p>Devoured: {{devoured}}</p> -->
              </div>
            {{/each}}
        </div>
    </div>

    <!-- Link to a page via route
        <a href="/home"><button type="button" class="btn btn-primary">Home</button></a> -->

</div> <!-- /container -->











